{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "require-jsdoc":"error",
        "prettier/prettier": ["error", {}, {
            "usePrettierrc": true
        }],
        "semi": "off",
        "linebreak-style": 0
    },
    "ignorePatterns": ["public/js/app.js", "commitlint.config.js"]
}
